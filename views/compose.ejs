<%- include ('partials/header') -%>

<div class="container-md">
    <h2>Compose</h2>

    <form action="/compose" method="post">
        <div class="mb-3">
            <label for="post-title" class="form-label">Title</label>
            <input type="text" class="form-control" id="post-title" name="postTitle">
        </div>
        <div class="mb-3">
            <label for="post-body" class="form-label">Post</label>
            <textarea class="form-control" id="post-body" rows="3" name="postBody"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mb-3">Publish</button>
    </form>

</div>

<%- include ('partials/footer') -%>